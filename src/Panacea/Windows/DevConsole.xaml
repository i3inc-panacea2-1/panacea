<Window
    x:Class="Panacea.Windows.DevConsole"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DevConsole"
    WindowStyle="ToolWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TreeView Grid.Row="1" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:DevConsole}, Path=Logs}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type local:LogModel}" ItemsSource="{Binding Items}">
                    <TextBlock  Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Name}" TextWrapping="Wrap" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
