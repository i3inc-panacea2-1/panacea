<Window
    x:Class="Panacea.Windows.DevConsole"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DevConsole"
    WindowStyle="ToolWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid >
        <TreeView ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:DevConsole}, Path=Logs}" >
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type local:LogModel}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
