<Window
    x:Class="Panacea.Controls.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SplashScreen"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Image
                Width="100"
                Margin="10"
                Source="/Resources/Images/logo-small.png" />
            <!--<my:CircularProgressBar Margin="20" Color="#0e7670"/>-->
            <TextBlock
                Margin="10,20,10,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="Transparent"
                FontSize="20"
                FontWeight="Light"
                Foreground="Black"
                Text="{Binding RelativeSource={RelativeSource AncestorType=local:SplashScreen}, Path=ProgressText}"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <!--    -->
        </StackPanel>
    </Grid>
</Window>
